                                    <div class="quote-container">
                                        <div class="quote-image">
                                            <img src="~/assets/img/about/@item.Image" alt="">
                                        </div>
                                        <div class="testimonials-text">
                                            <p>@item.Description</p>
                                        </div>
                                        <div class="author">
                                            <h6>@item.Fullname</h6>
                                            <p>@item.Jobname</p>
                                        </div>

                                    </div>
                                </div>
                            }
                           
                        </div>
                    </div>
