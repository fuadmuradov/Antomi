            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="section_title">
                        <h2>What can we do for you ?</h2>
                    </div>
                    <div class="faq-style-wrap" id="faq-five">

                        @{
                            string faqid = "faq-collapse";
                            int itemId = 1;
                        }

                        @foreach (var item in Model.Questions)
                        {
                           
                            faqid = "faq-collapse"+itemId.ToString();
                            <!-- Panel-default -->
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h5 class="panel-title">
                                        <a id="octagon" class="collapsed" role="button" data-bs-toggle="collapse" href="#@faqid" aria-expanded="true" aria-controls="faq-collapse1"> <span class="button-faq"></span>@item.Issue</a>
                                    </h5>
                                </div>
                                <div id="@faqid" class="collapse show" aria-expanded="true" role="tabpanel" data-parent="#faq-five">
                                    <div class="panel-body">
                                        <p>@item.Answer</p>
                                    </div>
                                </div>
                            </div>
                            <!--// Panel-default -->
                            itemId+=1;
                        }

                    </div>

