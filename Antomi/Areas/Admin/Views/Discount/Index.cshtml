@model List<Discount>
<div class="body-content">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <!--Table-->
            <div class="card-body">
                <div class=table-responsive>
                    <!--<table class="table table-sm table-nowrap card-table">-->
                    <label class="font-weight-600">Categories</label>
                    <table class="table display table-bordered table-striped table-hover bg-white m-0 card-table">
                        <thead>
                            <tr>

                                <th>Product Name</th>
                                <th>Color</th>
                                <th>Percent</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>

                                <td>@item.ProductColor.Product.Model</td>
                                <td>@item.ProductColor.Name</td>

                                <td>@item.Percent</td>

                                <td>@item.StartDate.ToString("dd.MMMM.yyyy")</td>
                                <td>@item.EndDate.ToString("dd.MMMM.yyyy")</td>
                                <td>
                                    <a asp-action="DeleteDiscount" asp-controller="Discount" asp-area="admin" asp-route-id="@item.Id" class="btn btn-danger-soft btn-sm" onclick="return confirm('Are you sure you want to delete?')"><i class="far fa-trash-alt"></i></a>
                                    <a asp-action="UpdateDiscount" asp-controller="Discount" asp-area="admin" asp-route-id="@item.Id" class="btn btn-success-soft btn-sm ml-1 btnEdit"><i class="far fa-edit"></i></a>
                                    @if (!item.DealofMonth)
                                    {
                                        <a asp-action="DealOfMonth" asp-controller="Discount" asp-area="admin" asp-route-id="@item.Id" class="btn btn-success-soft btn-sm"><i class="far fa-edit">DealOfMonth</i></a>
                                    }
                                    else
                                    {
                                        <a asp-action="DealOfMonth" asp-controller="Discount" asp-area="admin" asp-route-id="@item.Id" class="btn btn-danger-soft btn-sm"><i class="far fa-edit">Reject</i></a>
                                    }
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!--End Table-->

        </div>
    </div>
</div>

