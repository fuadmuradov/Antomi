
@model Slider

<div class="card center-block mb-5" style="width:50rem;">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="card-body">
              
                <div class="form-group">
                    <label asp-for="Photo" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Photo"><br />
                    <span asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Title"><br />
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Discount"><br />
                    <span asp-validation-for="Discount"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-success ml-4">Add Discount</button>
        </form>
    </div>
</div>
