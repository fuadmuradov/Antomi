
@model List<Slider>
<div class="body-content">
    <div class="container">
        <div class="row justify-content-center">
            <a class="btn btn-success-soft" asp-area="Admin" asp-action="AddSlider" asp-controller="Slider" style="width:800px">Add new Slider</a>
        </div>
        <div class="row justify-content-center">

            @foreach (var item in Model)
            {
                <div class="card mr-2 ml-2" style="width: 22rem;">
                    <div class="mt-2" style="width:300px; height:210px">
                        <img src="~/assets/img/slider/@item.Image" class="card-img-top" alt="Slider Image">
                    </div>
                    <div class="card-body center-block mt-2">
                        <div>
                            <h5 class="card-title"> <strong>Discount Percent @item.Discount</strong> </h5>

                            <h6>@(item.Title.Length<142 ? item.Title:item.Title.Substring(142 )+"...")</h6>
                        </div>
                        <a asp-area="Admin" asp-controller="Slider" asp-action="DeleteSlider" asp-route-id="@item.Id" class="btn btn-danger-soft btn-sm" onclick="return confirm('Are you sure you want to delete?')"><i class="far fa-trash-alt"></i></a>
                        <a asp-area="Admin" asp-controller="Slider" asp-action="UpdateSlider" asp-route-id="@item.Id" class="btn btn-success-soft btn-sm ml-1"><i class="far fa-edit"></i></a>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

