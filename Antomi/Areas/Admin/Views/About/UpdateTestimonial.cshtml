
@model Testimonial
@{
    ViewData["Title"] = "Index";
}

<div class="card center-block mb-5" style="width:50rem;">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="card-body">
                <div class="form-group d-none">
                    <input class="form-control" asp-for="Id"><br />
                </div>
                <div class="form-group">
                    <label asp-for="Photo" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Photo"><br />
                    <span asp-validation-for="Photo"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Fullname" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Fullname"><br />
                    <span asp-validation-for="Fullname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Jobname" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Jobname"><br />
                    <span asp-validation-for="Jobname"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Description" class="font-weight-600"></label>
                    <textarea class="form-control" asp-for="Description" rows="6"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-success ml-4">Update</button>
        </form>
    </div>
</div>


