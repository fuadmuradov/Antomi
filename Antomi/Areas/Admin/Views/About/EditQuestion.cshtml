@model Question

@{
    ViewData["Title"] = "Index";
}

<div class="card center-block mb-5" style="width:50rem;">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="card-body">
                <div class="form-group d-none">
                    <input class="form-control" asp-for="Id"><br />
                </div>

                <div class="form-group">
                    <label asp-for="Issue" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Issue"><br />
                    <span asp-validation-for="Issue"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Answer" class="font-weight-600"></label>
                    <textarea class="form-control" asp-for="Answer" rows="6"></textarea>
                    <span asp-validation-for="Answer"></span>
                </div>

            </div>
            <button type="submit" class="btn btn-success ml-4">Update Question</button>
        </form>
    </div>
</div>




