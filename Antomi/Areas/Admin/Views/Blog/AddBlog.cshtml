 
@model Blog

<div class="card center-block mb-5" style="width:50rem;">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Photo" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Photo"><br />
                    <span asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Title"><br />
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="font-weight-600"></label>
                    <textarea class="form-control" asp-for="Description" rows="6"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Emphasis" class="font-weight-600"></label>
                    <textarea class="form-control" asp-for="Emphasis" rows="3"></textarea>
                    <span asp-validation-for="Emphasis"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="font-weight-600">Select Product Color</label>
                    <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Category, "Id", "Name"))">
                    </select>
                    <span asp-validation-for="CategoryId"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-success ml-4">Add Discount</button>
        </form>
    </div>
</div>
