@model Setting
@{
    ViewData["Title"] = "Index";
}

<div class="card center-block mb-5" style="width:50rem;">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="card-body">
                <div class="form-group d-none">
                    <input class="form-control" asp-for="Id"><br />
                </div>
                <div class="form-group">
                    <label asp-for="Photo" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Photo"><br />
                    <span asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <img src="~/assets/img/logo/@Model.LogoImage" alt="Logo Image" class="width:220px; height:100px" />
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Phone"><br />
                    <span asp-validation-for="Phone"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Email"><br />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="font-weight-600"></label>
                    <input class="form-control" asp-for="Address"><br />
                    <span asp-validation-for="Address"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="font-weight-600"></label>
                    <textarea class="form-control" asp-for="Description" rows="6"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PlaystoreUrl" class="font-weight-600"></label>
                    <input class="form-control" asp-for="PlaystoreUrl"><br />
                    <span asp-validation-for="PlaystoreUrl"></span>
                </div> <div class="form-group">
                    <label asp-for="AppstoreUrl" class="font-weight-600"></label>
                    <input class="form-control" asp-for="AppstoreUrl"><br />
                    <span asp-validation-for="AppstoreUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FacebookUrl" class="font-weight-600"></label>
                    <input class="form-control" asp-for="FacebookUrl"><br />
                    <span asp-validation-for="FacebookUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TwitterUrl" class="font-weight-600"></label>
                    <input class="form-control" asp-for="TwitterUrl"><br />
                    <span asp-validation-for="TwitterUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InstagramUrl" class="font-weight-600"></label>
                    <input class="form-control" asp-for="InstagramUrl"><br />
                    <span asp-validation-for="InstagramUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LinkedinUrl" class="font-weight-600"></label>
                    <input class="form-control" asp-for="LinkedinUrl"><br />
                    <span asp-validation-for="LinkedinUrl"></span>
                </div>

            </div>
            <button type="submit" class="btn btn-success ml-4">Update Setting Table</button>
        </form>
    </div>
</div>

